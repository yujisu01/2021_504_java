<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script type="text/javascript" src="js/jQuery3.x/jquery-3.6.0.js"></script>
<script type="text/javascript">
	$().ready(function() {
		alert("jQuery 작동");
	});
</script>
<script type="text/javascript">
	// jQuery작동확인 이것도 된다. (if문 사용)
	//if(jQuery){
	//	alert("jQuery 작동");
	//}
	//else{
	//	alert("작동안됨");
	//}
	function registerCheck(){
		//alert("이동합니다");
		var frm = document.register;
		var min = 6;
		var max = 8;
		
		if(frm.irum.value.length == 0) {
			alert("이름은 필수 입력사항입니다.");
			frm.irum.focus();
			return false;
		}
		if(frm.userid.value.length>max || frm.userid.value.length<min ){
		alert("아이디를 " + min + " ~ " + max +" 문자 사이로 입력해주세요");
			return false;
		}
		var phone = frm.phone.value;
		var exp= /^[0-9]+$/;
		
		if(phone.match(exp)==null){
			document.getElementById("msg").style.fontWeight="bold";
			document.getElementById("msg").style.color="red";
			document.getElementById("msg").textContent="숫자만 입력해주세요";
			return false;
		}
		var email = frm.email.value;
		var exp = /^[\w]{4,}@[\w]+(\.[\w-]+){1,3}$/;
		
		if(email.match(exp)==null){
			document.getElementById("emsg").style.fontWeight="bold";
			document.getElementById("emsg").style.fontWeight="red";
			document.getElementById("emsg").style.fontWeight="이메일형식에 맞게 입력하세요";
              return false;
		}
		  
		return true;
	}
</script>
</head>
<body>
	<h3>회원가입</h3>
	<form action="#" name="register" onsubmit="return registerCheck();">
		이름 : <input type="text" id="irum" name="irum"><br> 
		주소 : <input type="text" id="addr" name="addr"><br>
		생년월일 : <input type="date" id="birth" name="birth"><br>
		아이디(6~8자) : <input type="text" id="userid" name="userid"><br>
		이메일 : <input type="email" id="email" name="email">&nbsp;<span id="emsg"></span><br>
		휴대폰 : <input type="tel" id="phone" name="phone">&nbsp;<span id="msg"></span><br>
		<input type="submit" value="확인">
		 	
	</form>
</body>
</html>