<script type="text/javascript" src="js/jQuery3.x/jquery-3.6.0.js"></script>
<script type="text/javascript">
	$().ready(function(){
		$("#text").click(function() {
			alert($("target").text());
		});
		$("#html").click(function() {
			alert($("target").html());
		});
		$("#val").click(function() {
			alert($("#irum").val());
			// 입력된값 가져옴
			console.log($("#irum").val());
		});
		$("#attr").click(function() {
			alert($("#chain_dog").attr("src"));
		});
		$("#button1").click(function() {
			// 태그처럼 인식을 할수있다.
			$("#append").append("<b style='color:#fdd063'>Yes sir zz</b>");
		});
		$("#button2").click(function() {
			$("#append").prepend("<b style='color:#ddd333'>Yes sir zz</b>");
		});
		$("#remove").click(function() {
			$(".container").remove();
		});
		$("#empty").click(function() {
			$(".container").empty();
		});
		
	});
</script>
</head>
